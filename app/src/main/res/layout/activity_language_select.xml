<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.LanguageApp"
    tools:context="com.example.MobileAppCourse.LanguageSelect">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="670dp"
        android:background="#410FA3"
        app:layout_constraintBottom_toTopOf="@+id/toolbar_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/fredoka_semibold"
            android:text="Language Select"
            android:textColor="@color/white"
            android:background="#410FA3"
            android:textSize="20sp" />


    </com.google.android.material.appbar.MaterialToolbar>

    <TextView
        android:id="@+id/toolbar_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topAppBar"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="576dp"
        android:fontFamily="@font/fredoka_semibold"
        android:gravity="center"
        android:text="What is your Mother language?"
        android:theme="@style/Base.Theme.LanguageApp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/russian_button"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_round_change_lang"
        android:fontFamily="@font/fredoka_semibold"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="Russian"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_subtitle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/english_button"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_round_change_lang"
        android:fontFamily="@font/fredoka_semibold"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="English"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/russian_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chinese_button"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_round_change_lang"
        android:fontFamily="@font/fredoka_semibold"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="Chinese"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/english_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/belarus_button"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_round_change_lang"
        android:fontFamily="@font/fredoka_semibold"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="Belarus"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chinese_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/kazakh_button"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_round_change_lang"
        android:fontFamily="@font/fredoka_semibold"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="Kazakh"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/belarus_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choose_button"
        android:layout_width="313dp"
        android:layout_height="0dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/button_round_blue"
        android:fontFamily="@font/fredoka_semibold"
        android:text="Choose"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>