<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.LanguageApp"
    tools:context="com.example.MobileAppCourse.MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBarLogin2"
        android:layout_width="413dp"
        android:layout_height="148dp"
        android:background="#410FA3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.appbar.MaterialToolbar>

    <ImageView
        android:id="@+id/imageAvatar"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/gray_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/fredoka_semibold"
        android:text="Hello, User"
        android:textColor="@color/white"
        android:background="#410FA3"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topAppBarLogin2" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"

        android:fontFamily="@font/fredoka_semibold"
        android:text="Top users"
        android:theme="@style/Base.Theme.LanguageApp"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topAppBarLogin2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginTop="189dp"

        android:fontFamily="@font/fredoka_semibold"
        android:text="Available exercise"
        android:textSize="20dp"
        android:theme="@style/Base.Theme.LanguageApp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topAppBarLogin2"
        app:layout_constraintVertical_bias="0.439" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"

        android:fontFamily="@font/fredoka_semibold"
        android:text="Are you ready for learning today?"
        android:textColor="@color/white"
        android:background="#410FA3"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageAvatar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="355dp"
        android:layout_height="73dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/mendeleev"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topAppBarLogin2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="355dp"
        android:layout_height="73dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/vlad_tepes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topAppBarLogin2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="355dp"
        android:layout_height="73dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/van_gogh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topAppBarLogin2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonGuessTheAnimal"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="153dp"
        android:layout_height="117dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/exercise_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonListening"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="153dp"
        android:layout_height="117dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/exercise_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button8"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="153dp"
        android:layout_height="117dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/exercise_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonWordPractice"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="153dp"
        android:layout_height="117dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/exercise_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727" />

</androidx.constraintlayout.widget.ConstraintLayout>