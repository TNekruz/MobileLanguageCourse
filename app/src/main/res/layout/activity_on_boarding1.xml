<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.LanguageApp"
    android:orientation="vertical"
    tools:context="com.example.MobileAppCourse.OnBoarding1">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="253dp"
        android:layout_height="356dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="79dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/onboarding_image_1"
        android:theme="@style/Base.Theme.LanguageApp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="91dp"
        android:layout_height="32dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="408dp"
        android:layout_marginEnd="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/threedots_1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="279dp"
        android:layout_height="33dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="476dp"
        android:layout_marginEnd="66dp"
        android:fontFamily="@font/fredoka_semibold"
        android:text="Confidence in your words"
        android:theme="@style/Base.Theme.LanguageApp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="264dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:fontFamily="@font/fredoka_regular"
        android:gravity="center"
        android:text="With conversation-based learning,"
        android:textColor="#959595"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintVertical_bias="0.169"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="236dp"
        android:layout_height="24dp"
        android:fontFamily="@font/fredoka_regular"
        android:text="you'll betalking from lesson one"
        android:textColor="#959595"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="236dp"
        android:layout_height="24dp"
        android:fontFamily="@font/fredoka_regular"
        android:text="Skip onboarding"
        android:textColor="#959595"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="336dp"
        android:layout_height="60dp"
        android:layout_marginStart="154dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="155dp"
        android:background="@drawable/button_round_blue"
        android:fontFamily="@font/fredoka_semibold"
        android:text="Next"
        android:textColor="@color/white"
        android:textColorLink="#5B7BFE"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>